<script>
  mixpanel.track("Display Login");
  amplitude.getInstance().logEvent("Display Login");
</script>

<div id="container" style="padding-top: 20px;">
  <div class="row">
    <div class="col-md-4">&nbsp;</div>
    <div class="col-md-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Sign In</h3>
        </div>
        <div class="panel-body">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, style: 'width: 100%' %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", style: 'width: 100%' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Sign in" %>
          </div>

          <%= render "devise/shared/links" %>
        </div>
      </div>
      <% end %>
      <hr>
      <div class="text-center">
        <strong><p>New to EZ Golf League? Create an account for free.</p></strong>
        <%= link_to "Create Your FREE EZ Golf League Account", new_play_registration_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="col-md-4">&nbsp;</div>
  </div>
</div>

<div class="col-xs-12" style="height:200px;"></div>
