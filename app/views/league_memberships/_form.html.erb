<%= simple_form_for ([@league, @league_membership]) do |f| %>
  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>
  
  <legend>Membership Details</legend>
  
  <h3>Basic Details</h3>
  <div class="well">     
    <%= f.association :user, :label => 'User', :label_method => :complete_name %>
    
	  <%= f.input :is_admin, :label => 'Is this user an admin for this league?' %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-default' %>
  </div>
<% end %>