<%= simple_form_for [@tournament.league, @tournament, @payout] do |f| %>
  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>

  <legend><%= @tournament_day.pretty_day(true) %>Payout Details</legend>

  <h3>Basic Details</h3>
  <div class="well">
    <%= f.input :flight_id, collection: @tournament_day.flights, label: flight_or_group(@tournament), :label_method => :display_name, required: true %>

	  <%= f.input :amount, label: 'Amount ($)', required: true %>

    <%= f.input :points, label: 'Points', required: true %>
  </div>

  <div class="form-actions">
    <% if @payout.new_record? -%>
      <%= f.button :submit, "Save & Create Another Payout", :class => 'btn btn-default' %>
      <%= f.button :submit, "Save & Continue", :class => 'btn btn-primary' %>
    <% else -%>
      <%= f.button :submit, "Save", :class => 'btn btn-default' %>
    <% end -%>
  </div>
<% end %>
