<body "data-no-turbolink">

<% if user_signed_in? -%>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">
        EZ Golf League
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Tournaments", league_tournaments_path(current_user.selected_league) %></li>
        <li><%= link_to "Reports", league_reports_path(current_user.selected_league) %></li>
        <li><%= link_to "Leagues", leagues_path %></li>
        <% if current_user.is_super_user %>
        <li><%= link_to "Courses", courses_path %></li>
        <% end -%>
        <li><%= link_to "Notifications", notification_templates_path %></li>
        <li><%= link_to "Payments", payments_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">User Accounts <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "All User Accounts", user_accounts_path %></li>
            <% if current_user.is_super_user %>
            <li><%= link_to "Invite League Admin", setup_league_admin_invite_user_accounts_path %></li>
            <% end -%>
            <li><%= link_to "Invite Golfer", setup_golfer_invite_user_accounts_path %></li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "My Dashboard", play_dashboard_index_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.complete_name %> <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <% if !current_user.has_all_exempt_leagues? %>
            <li><%= link_to "Your Subscription", current_league_subscription_credits_path(current_user.selected_league) %></li>
            <% end %>
            <li><%= link_to "User Profile", edit_current_user_accounts_path %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% end -%>

<div class="container master-container">
  <% flash.each do |type, message| %>
    <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>

  <% if !current_user.selected_league.has_active_subscription? %>
    <div class="alert alert-warning fade in">
      You do not have an active subscription. Please <%= link_to "visit the subscription page", current_league_subscription_credits_path(current_user.selected_league) %> to setup billing and purchase tournament credits.
    </div>
  <% end %>

  <%= yield %>
</div>

<footer class="container">
  <br/>
  Copyright Â© EZ Golf League | <%= link_to "Privacy Policy", "/privacy_policy.html" %> | <%= link_to "Terms of Service", "/terms_of_service.html" %>

  <br/><br/>
  <div>
    <a href='https://itunes.apple.com/us/app/ez-golf-league/id1088689756?mt=8'><%= image_tag 'app_store.svg', width: "180" %></a>
    &nbsp;&nbsp;
    <a href='https://play.google.com/store/apps/details?id=com.ezgolfleague.golfapp&hl=en'><%= image_tag 'google-play-badge.png', width: "200" %></a>
  </div>

  <% if current_user != true_user && true_user.is_super_user %>
    <br/><br/>
    <strong>You (<%= true_user.complete_name %>) are signed in as <%= current_user.complete_name %>
    <br/>
    <%= link_to "Stop Impersonating", stop_impersonating_user_accounts_path %></strong>
<% end %>
</footer>

</body>
</html>
