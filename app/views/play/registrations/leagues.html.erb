<script>
  ezglTrackAnalyticsEvent("Created a new user account");
  ezglTrackAnalyticsEvent("Viewed existing leagues during registration");
</script>

<div id="container">
	<div class="row">
    <div class="onboarding__panel registration">
      <div class="onboarding__panel-side">
        <%= image_tag("ezgl-icon-white.png", class: 'ezgl-icon') %>
				<div class="panel-side-text">
					<h3 class="panel-title pb-1">Choose a League</h3>
					<p class="panel-subtitle pb-4">Choose your league or add your<br>own league and get started.</p>
				</div>
      </div>
      <div class="panel panel-default p-5">
        <div class="panel-heading">
          <h3 class="panel-title pb-4">Choose a League</h3>
        </div>
        <div class="panel-body registration">
          <div class="league-selection">
            <% @leagues.each do |league| %>
              <% if !current_user.leagues.include? league %>
                <div>
                  <p><%= league.name %></p>
                  <p><%= league.location %></p>
                  <% if league.dues_amount == 0 %>
                    <%= link_to "Join Now", join_league_play_registrations_path(league_id: league.id), class: "btn__ezgl-secondary" %>
                  <% else %>
                    <% unless league.encrypted_stripe_production_publishable_key.blank? -%>
                      <%= link_to "Join Now via Credit Card - #{number_to_currency(league.dues_amount)}", join_league_play_registrations_path(league_id: league.id), class: "btn__ezgl-secondary" %>
                    <% end -%>
                  <% end %>
                </div>
              <% end -%>
            <% end -%>
          </div>
          <hr>
          <div class="create-league">
            <div>
              <p class="pb-2">Want to add your own league?</p>
              <%= link_to "Add Your League", new_league_play_registrations_path, class: "btn__ezgl-secondary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
	</div>
</div>