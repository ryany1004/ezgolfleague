<ol class="breadcrumb">
  <li><%= link_to "My Dashboard", play_dashboard_index_path %></li>
  <li><%= link_to @tournament.name, play_tournament_path(@tournament) %></li>
  <li class="active">Scorecard</li>
</ol>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
      <th>Hole</th>
      <% @tournament.course_holes.each do |hole| -%>
      <th><%= hole.hole_number %></th>
      <% end -%>
      <th>Total</th>
		</tr>
	</thead>
	<tbody>
		<tr>
      <td><%= @scorecard.golf_outing.user.complete_name %></td>
      <% @scorecard.scores.each do |score| -%>
      <td><%= score.strokes %></td>
      <% end -%>
      <td><%= @scorecard.scores.map {|score| score.strokes }.sum %></td>
		</tr>
	</tbody>
  <tfoot>
		<tr>
			<th>Par</th>
      <% @tournament.course_holes.each do |hole| -%>
      <th><%= hole.par %></th>
      <% end -%>
      <th><%= @tournament.course_holes.map {|hole| hole.par }.sum %></th>
		</tr>
		<tr>
			<th>Men's Handicap</th>
      <% @tournament.course_holes.each do |hole| -%>
      <th><%= hole.mens_handicap %></th>
      <% end -%>
      <th><%= @tournament.course_holes.map {|hole| hole.mens_handicap }.sum %></th>
		</tr>
		<tr>
			<th>Women's Handicap</th>
      <% @tournament.course_holes.each do |hole| -%>
      <th><%= hole.womens_handicap %></th>
      <% end -%>
      <th><%= @tournament.course_holes.map {|hole| hole.womens_handicap }.sum %></th>
		</tr>
  </tfoot>
</table>