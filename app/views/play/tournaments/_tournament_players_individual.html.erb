<div class="col-md-6">
  <div class="panel panel-default panel-success">
    <div class="panel-heading">
      <h3 class="panel-title"><%= tournament_day.pretty_day(true) %>Tournament Players <span class="badge"><%= tournament_day.tournament.number_of_players %></span></h3>
    </div>
    <table class="table table-striped">
    	<thead>
    		<tr>
    			<th>Name</th>
          <th>Course Handicap</th>
          <th>Flight</th>
          <th>Group</th>
          <th>Tee Time</th>
    		</tr>
    	</thead>
    	<tbody>
    	<% tournament_day.tournament_groups.each_with_index do |tournament_group, i| %>
        <% tournament_group.golf_outings.each do |golf_outing| %>
        <tr>
          <td><%= golf_outing.user.complete_name %></td>
          <td><%= golf_outing.course_handicap.to_i %></td>
          <% if tournament_day.flight_for_player(golf_outing.user).blank? -%>
          <td>&nbsp;</td>
          <% else -%>
          <td><strong><%= (tournament_day.flight_for_player(golf_outing.user).flight_number) %></strong></td>
          <% end -%>
          <td><strong><%= i + 1 %></strong></td>
          
          <td><%= display_tee_time_or_position(tournament_group) %></td>
        </tr>
        <% end %>
    	<% end %>
    	</tbody>
    </table>
  </div>
</div>