<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default panel-success">
      <div class="panel-heading">
        <h3 class="panel-title"><%= current_user.selected_league.name %></h3>
      </div>
      <div class="panel-body">
        <p><em>Your current league balance is <%= number_to_currency(Payment.balance_for_user(current_user, current_user.selected_league)) %>. You can use positive balances to pay league dues and tournament fees.</em></p>
        <p><%= link_to "View your complete transaction history.", play_payments_path %></p>
        <% if has_paid_dues == false -%>
        <p><%= link_to "Pay League Dues Now", new_play_payment_path(:payment_type => "league_dues", :league_id => current_user.selected_league.id), :class => 'btn btn-primary' %></p>
        <% end -%>
      </div>
    </div>
  </div>
</div>