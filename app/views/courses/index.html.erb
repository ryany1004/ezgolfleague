<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Courses</h3>
    </div>
    <table class="table table-striped">
    	<thead>
    		<tr>
    			<th>Name</th>
          <th>Holes</th>
          <th>Date Added</th>
          <th><%= link_to 'Create Course', new_course_path, :class => 'btn btn-primary' %></th>
    		</tr>
    	</thead>
    	<tbody>
    	<% @courses.each do |course| %>
    		<tr>
    			<td><%= link_to course.name, edit_course_path(course) %></td>
          <td><%= course.course_holes.count %></td>
    			<td><%= course.created_at.to_s(:date_and_time) %></td>
          <td><%= link_to "Edit", edit_course_path(course) %> | <%= link_to 'Delete', course_path(course), :data => { :confirm => 'Are you sure you want to delete this course?' }, :method => :delete %></td>
    		</tr>
    	<% end %>
    	</tbody>
      <tfoot>
    		<tr>
    			<th>&nbsp;</th>
          <th>&nbsp;</th>
    			<th>&nbsp;</th>
          <th><%= link_to 'Create Course', new_course_path, :class => 'btn btn-primary' %></th>
    		</tr>
      </tfoot>
    </table>
  </div>
</div>

<%= paginate @courses %>