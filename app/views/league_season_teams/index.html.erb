<ol class="breadcrumb">
  <li><%= link_to "Leagues", leagues_path %></li>
  <li><%= link_to @league_season.name, league_league_seasons_path(@league, @league_season) %></li>
  <li class="active">Teams</li>
</ol>

<h4>Teams for <%= @league_season.name %></h4>

<table class="table table-striped">
	<thead>
		<tr>
      <th>Name</th>
			<th>Players</th>
      <th><%= link_to 'Create Team', new_league_league_season_league_season_team_path(@league, @league_season), class: 'btn btn-primary' %></th>
		</tr>
	</thead>
	<tbody>
	<% @league_season_teams.each do |team| %>
		<tr>
      <td><%= link_to team.name, edit_league_league_season_league_season_team_path(@league, @league_season, team) %></td>
      <td><%= team.users.count %></td>
      <td><%= link_to "Edit", edit_league_league_season_league_season_team_path(@league, @league_season, team) %> | <%= link_to 'Delete', league_league_season_league_season_team_path(@league, @league_season, team), data: { confirm: 'Are you sure you want to delete this team?' }, method: :delete %></td>
		</tr>
	<% end %>
	</tbody>
  <tfoot>
		<tr>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
      <th><%= link_to 'Create Team', new_league_league_season_league_season_team_path(@league, @league_season), class: 'btn btn-primary' %></th>
		</tr>
  </tfoot>
</table>