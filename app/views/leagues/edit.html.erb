<div class="ezgl-container">
  <div id="container">
    <div class="row">
      <div class="onboarding__panel registration user-account-edit">
        <div class="onboarding__panel-side white">
          <div class="panel-side-text">
            <div class="nav flex-column" id="v-tab" role="tablist" aria-orientation="vertical">
              <a class="nav-link active" id="v-edit-league-details-tab" data-toggle="pill" href="#v-edit-league-details" role="tab" aria-controls="v-edit-league-details" aria-selected="true">League Details</a>
              <a class="nav-link" id="v-edit-preferences-tab" data-toggle="pill" href="#v-edit-preferences" role="tab" aria-controls="v-edit-preferences" aria-selected="false">Preferences</a>
            </div>
          </div>
          <%= link_to "Exit to League", league_path(current_user.selected_league), class: 'btn btn-outline-secondary' %>
        </div>
        <div class="panel panel-default panel-user p-5">
          <div class="panel-body registration">
            <div class="tab-content" id="v-tabContent">
              <div class="tab-pane fade show pb-5 active" id="v-edit-league-details" role="tabpanel" aria-labelledby="v-edit-league-details-tab">
                <%= render 'edit_league_details' %>
              </div>
              <div class="tab-pane fade pb-5" id="v-edit-preferences" role="tabpanel" aria-labelledby="v-edit-preferences-tab">
                <%= render 'edit_preferences' %> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
