<%= simple_form_for @league do |f| %>
  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>

  <legend>League Details</legend>

  <h3>Basic Details</h3>
  <div class="well">
	  <%= f.input :name, :label => 'Name', required: true %>
    <%= f.input :dues_payment_receipt_email_addresses, :label => 'Address(es) For Dues Email Confirmations (separate with commas)' %>
  </div>

  <div class="well">
	  <%= f.input :league_description, :label => 'Description' %>
    <%= f.input :location, :label => 'Play Location' %>
    <%= f.input :contact_name, :label => 'Contact Name' %>
    <%= f.input :contact_phone, :label => 'Contact Phone' %>
    <%= f.input :contact_email, :label => 'Contact Email' %>
    <%= f.input :show_in_search, :label => 'Appears in League Search?' %>

  </div>

  <% if current_user.is_super_user %>
  <h3>Super User Options</h3>
  <div class="well">
    <%= f.input :exempt_from_subscription, :label => 'League Exempt From Billing' %>

    <%= f.input :tournaments_remaining, :label => 'Remaining Free Tournaments' %>

    <%= f.input :required_container_frame_url, :label => 'Container Site URL for Embedding' %>
  </div>
  <% end %>

  <h3>Credit Card Info</h3>
  <div class="well">
    <%= f.input :stripe_production_secret_key, :label => 'Stripe Secret Key (Production)' %>
    <%= f.input :stripe_production_publishable_key, :label => 'Stripe Publishable Key (Production)' %>
    <%= f.input :stripe_test_secret_key, :label => 'Stripe Secret Key (Test)' %>
    <%= f.input :stripe_test_publishable_key, :label => 'Stripe Publishable Key (Test)' %>
    <%= f.input :stripe_test_mode, :label => 'Use Test Mode?' %>
  </div>

  <h3>Apple Pay</h3>
  <div class="well">
    <%= f.input :apple_pay_merchant_id, :label => 'Apple Pay Merchant ID' %>
    <%= f.input :supports_apple_pay, :label => 'Supports Apple Pay?' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-default' %>
  </div>
<% end %>
