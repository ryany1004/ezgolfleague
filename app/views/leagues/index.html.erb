<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @page_title %></h3>
    </div>
    <table class="table table-striped">
    	<thead>
    		<tr>
    			<th>Name</th>
          <th>Date Added</th>
          <th>Actions</th>
          <% if current_user.is_super_user? -%>
          <th><%= link_to 'Create League', new_league_path, :class => 'btn btn-primary' %></th>
          <% else -%>
          <th>&nbsp;</th>
          <% end -%>
    		</tr>
    	</thead>
    	<tbody>
    	<% @leagues.each do |league| %>
    		<tr>
    			<td><%= link_to league.name, edit_league_path(league) %></td>
    			<td><%= league.created_at.to_s(:date_and_time) %></td>
          <% if user_is_league_admin(current_user, league) -%>          
          <td>
          <div class="btn-group">
            <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              Details <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Manage Memberships (#{league.league_memberships.count})", league_league_memberships_path(league) %></li>
              <li><%= link_to "Manage Seasons", league_league_seasons_path(league) %></li>
              <li><%= link_to "Update Members from GHIN", league_update_from_ghin_path(league), method: :patch %></li>
            </ul>
          </div>
          </td>
          <% else -%>
          <td>&nbsp;</td>
          <% end -%>
          <% if current_user.is_super_user? %>
          <td><%= link_to "Edit", edit_league_path(league) %> | <%= link_to 'Delete', league_path(league), :data => { :confirm => 'Are you sure you want to delete this league?' }, :method => :delete %></td>
          <% else -%>
          <td>&nbsp;</td>
          <% end -%>
    		</tr>
    	<% end %>
    	</tbody>
      <tfoot>
    		<tr>
    			<th>&nbsp;</th>
          <th>&nbsp;</th>
    			<th>&nbsp;</th>
          <% if current_user.is_super_user? -%>
          <th><%= link_to 'Create League', new_user_account_path, :class => 'btn btn-primary' %></th>
          <% else -%>
          <th>&nbsp;</th>
          <% end -%>
    		</tr>
      </tfoot>
    </table>
  </div>
</div>

<%= paginate @leagues %>