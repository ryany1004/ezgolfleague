<% if @dues == 0 %>
	A player signed up: <%= @user.complete_name %>:

	<%= @tournament.name %>
<% else %>
	TOURNAMENT DUES PLAYER PAYING LATER

	A player signed up to pay later: <%= @user.complete_name %>:

	<%= @tournament.name %>
	<%= number_to_currency(@dues) %>
<% end %>

<% @tournament.tournament_days.each do |td| %>
  <% td.optional_scoring_rules.each do |c| %>
    <% if c.users.include? @user %>
      <%= c.name_with_cost %>
    <% end %>
  <% end %>
<% end %>

