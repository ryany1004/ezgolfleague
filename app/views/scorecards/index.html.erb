<ol class="breadcrumb">
  <li><%= link_to "Tournaments", league_tournaments_path(current_user.selected_league) %></li>
  <li><%= link_to @tournament.name, edit_league_tournament_path(current_user.selected_league, @tournament) %></li>
  <li class="active">Scorecards</li>
</ol>

<div class="row">
  <div class="col-md-10">&nbsp;</div>
  <div class="col-md-2">
    <p><%= link_to "Print Scorecards", print_scorecards_path(:tournament_id => @tournament), class: "btn btn-info", role: "button", target: "_blank" %></p>
  </div>
</div>

<div class="col-md-12">
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <% @players.each_with_index do |player, i| %>
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="heading<%= i %>">
          <h4 class="panel-title">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= i %>" aria-expanded="false" aria-controls="collapse<%= i %>">
              <%= player.complete_name %> <% if @tournament.primary_scorecard_for_user(player).is_confirmed == true -%>(Confirmed)<% else -%>(Unconfirmed)<% end -%>
            </a>
          </h4>
        </div>
        <div id="collapse<%= i %>" class="panel-collapse collapse <% if i == 0 -%>in<% end -%>" role="tabpanel" aria-labelledby="heading<%= i %>">
          <div class="panel-body">
            <%= render partial: '/shared/scorecards/show', locals: {scorecard: @tournament.primary_scorecard_for_user(player), split_holes: split_holes_for_course_tournament(@tournament), split_scores: split_scores_for_scorecard(@tournament.primary_scorecard_for_user(player), @tournament.course_holes.count), tournament: @tournament, handicap_allowance: @tournament.handicap_allowance(player)} %>
            <p>
              <%= link_to "Edit This Scorecard", edit_scorecard_path(@tournament.primary_scorecard_for_user(player)), class: "btn btn-warning", role: "button" %>
            </p>
          </div>
        </div>
      </div>
      <% end -%>
    </div>
</div>