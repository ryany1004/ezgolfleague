<div class="col-md-8">
    <div class="view-tournament-card h-100">
        <div class="view-tournament-card-header">
          <div class="row">
            <div class="col-md-8 vtch-left-content">
                <h2><%= tournament.name %></h2>
                <p class="text-uppercase"><%= tournament.first_day.tournament_at.to_s(:long) %><a href="#">review scores</a></p>
            </div><!-- /.col-md-8 -->
            <div class="col-md-4 text-right">
              <%= link_to "View Tournament", league_tournament_path(tournament.league, tournament), class: "btn btn-primary" %>
            </div><!-- /.col-md-8 -->
          </div><!-- /.row -->
        </div><!-- /.view-tournament-card-header -->
        <div class="player-box">
           <div class="row">
              <div class="col-md-6">
                <h2>Leaderboard</h2>
              </div><!-- /.col-md-6 -->
              <div class="col-md-6">
                <ul class="list-inline player-list text-uppercase">
                  <li class="list-inline-item"><%= tournament.players.count %><span>registered</span></li>
                </ul>
              </div><!-- /.col-md-6 -->
            </div><!-- /.row -->
        </div><!-- /.player-box -->
        <div class="player-list-header">
            <div class="row text-uppercase">
              <div class="col">
                pos
              </div>            
              <div class="col-md-6">
                player
              </div>
              <div class="col">
                net
              </div>
              <div class="col">
                gross
              </div>
              <div class="col">
                par net
              </div>          
            </div>
        </div>
        <div class="player-list-content mCustomScrollbar" data-mcs-theme="dark">
          <% results.each_with_index do |flight, x| %>
            <% flight.tournament_day_results.each_with_index do |result, i| -%>
              <div class="player-list-col">
                <div class="row">
                  <div class="col time-col">
                    <%= result.rank %>
                  </div>
                  <div class="col-md-6">
                    <div class="media">
                      <%= user_avatar(result.user) %>
                      <div class="media-body">
                        <h2><%= result.user.complete_name %></h2>
                      </div>
                    </div>                              
                  </div>
                  <div class="col time-col">
                    <%= result.net_score %>
                  </div>
                  <div class="col contests-col">
                    <%= result.gross_score %>
                  </div>
                  <div class="col contests-col">
                    <%= par_helper(result.par_related_net_score) %>
                  </div>
                </div><!-- /.row -->
              </div><!-- /.player-list-col -->
            <% end %>
          <% end %>
        </div><!-- /.player-list-content -->                  
    </div><!-- /.view-tournament-card -->
</div><!-- /.col-md-8 -->