<%= simple_form_for [@tournament.league, @tournament, @tournament_day, @tournament_group] do |f| %>
  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>

  <legend><%= @tournament_day.pretty_day(true) %>Tee Time Details</legend>

  <h3>Basic Details</h3>
  <div class="well">
	  <%= f.input :tee_time_at, label: 'Date & Time', as: :datetime_picker, required: true, input_html: { value: @tournament_group.tee_time_at.to_s(:date_and_time) } %>

    <%= f.input :max_number_of_players, label: "Max Players for Tee Time" %>
  </div>

  <div class="form-actions">
    <% if @tournament_group.new_record? -%>
      <%= f.button :submit, "Save & Create Another Tee Time", class: 'btn btn-default' %>
      <%= f.button :submit, "Save & Continue", class: 'btn btn-primary' %>
    <% else -%>
      <%= f.button :submit, "Save", class: 'btn btn-default' %>
    <% end -%>
  </div>
<% end %>
