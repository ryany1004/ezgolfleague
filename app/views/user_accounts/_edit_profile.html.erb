<div class="registration-form-container">
	<div class="panel-heading">
		<h3 class="panel-title pb-4">Edit Profile</h3>
	</div>

	<%= simple_form_for @user_account, url: @user_account.new_record? ? user_accounts_path : user_account_path(@user_account), multipart: true, :defaults => { :input_html => { :class => "onboarding__input", :label => false }} do |f| %>
		<% if notification = f.error_notification %>
			<div class="alert alert-error fade in">
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				<%= notification %>
			</div>
		<% end %>

		<div class="registration-full-name form-flex-group">
			<div class="form-side-label">
				<p>Your Name</p>
			</div>

			<div class="form-flex-group">
				<%= f.input :first_name, placeholder: 'Enter your first name...', autofocus: true %>

				<%= f.input :last_name, placeholder: 'Enter your last name...' %>
			</div>
		</div>

		<div class="form-flex-group">
			<div class="form-side-label">
				<p>Email</p>
			</div>

			<%= f.input :email, placeholder: 'Enter your email address...' %>
		</div>

		<div class="form-flex-group">
			<div class="form-side-label">
				<p>Photo</p>
			</div>

			<div class="upload-photo-container">
				<div class="onboarding__input upload-photo" onclick="document.getElementById('user_avatar').click()">Upload Photo +</div>
				<%= f.input :avatar %>
				<div id="upload-photo-img">
          <% if current_user.avatar %>
            <%= image_tag current_user.avatar.url(:thumb), class: 'img-circle' %>
          <% else %>
					  <img id="upload-photo-img-default" src="http://placehold.it/40" >
          <% end %>
				</div>
			</div>
		</div>

		<div class="form-flex-group">
			<div class="form-side-label">
				<p>GHIN Number</p>
			</div>

			<div class="form-flex-group">
				<%= f.input :ghin_number %>

				<div class="form-side-label handicap_index-label pl-4">
					<p>18-Hole Index</p> 
					<i class="fa fa-eye pl-2" data-toggle="tooltip" data-placement="top" title="We offer several options for handicapping: pulling from GHIN, automatic based on past performance or manual handicap index. You can also override the handicap index with a manual course handicap - you can enter that below. Handicaps will automatically be converted for 9-hole tournaments."></i>
				</div>

				<%= f.input :handicap_index %>
			</div>
		</div>

    <div class="form-flex-group">
    	<div class="form-side-label">
				<p>Time Zone</p>
			</div>

      <div class="form-flex-group">
			  <%= f.input :time_zone, collection: ActiveSupport::TimeZone.us_zones, value_method: :name %>
      </div>
		</div>

		<div class="form-actions form-flex-group"> 
			<div class="form-flex-right">
				<%= f.button :submit, "Save", class: 'btn__ezgl-secondary' %>
			</div>
		</div>
	<% end %>
</div>