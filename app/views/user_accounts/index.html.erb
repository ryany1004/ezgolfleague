<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">User Accounts</h3>
    </div>
    <table class="table table-striped">
    	<thead>
    		<tr>
    			<th>Name</th>
          <th>Current Balance</th>
          <th>Date Joined</th>
          <th><%= link_to 'Create User', new_user_account_path, :class => 'btn btn-primary' %></th>
    		</tr>
    	</thead>
    	<tbody>
    	<% @user_accounts.each do |user_account| %>
    		<tr>
    			<td><%= link_to user_account.complete_name, edit_user_account_path(user_account) %></td>
    			<td><%= number_to_currency(Payment.balance_for_user(user_account)) %></td>
          <td><%= user_account.created_at.to_s(:date_and_time) %></td>
          <td><%= link_to "Edit", edit_user_account_path(user_account) %> | <%= link_to 'Delete', user_account_path(user_account), :data => { :confirm => 'Are you sure you want to delete this user?' }, :method => :delete %></td>
    		</tr>
    	<% end %>
    	</tbody>
      <tfoot>
    		<tr>
          <th>&nbsp;</th>
    			<th>&nbsp;</th>
          <th>&nbsp;</th>
    			<th>&nbsp;</th>
          <th><%= link_to 'Create User', new_user_account_path, :class => 'btn btn-primary' %></th>
    		</tr>
      </tfoot>
    </table>
  </div>
</div>

<%= paginate @user_accounts %>