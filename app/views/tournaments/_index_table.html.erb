<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= title %></h3>
    </div>
    <table class="table table-striped">
    	<thead>
    		<tr>
          <th>Name</th>
    			<th>League</th>
          <th>Course</th>
          <th>Date</th>
          <th>Signup Opens</th>
          <th>Max Players</th>
          <th>Scorecards</th>
          <th><%= link_to 'Create Tournament', new_league_tournament_path(current_user.selected_league), :class => 'btn btn-primary' %></th>
    		</tr>
    	</thead>
    	<tbody>
    	<% tournaments.each do |tournament| %>
    		<tr>
          <td><%= link_to_if is_editable?(tournament), tournament.name, edit_league_tournament_path(tournament.league, tournament) %></td>
          <td><%= tournament.league.name %></td>
          <td><%= tournament.course.name %></td>
          <td><%= tournament.tournament_at.to_s(:short) %></td>
          <td><%= tournament.signup_opens_at.to_s(:short) %></td>
          <td><%= tournament.max_players %></td>
          <td>
            <% if is_today?(tournament) -%>
            <%= link_to "Edit", league_tournament_scorecards_path(tournament.league, tournament) %>
            <% else -%>
            <%= link_to "View", league_tournament_scorecards_path(tournament.league, tournament) %>
            <% end -%>
          </td>
          <td><%= link_to "Signups", league_tournament_signups_path(tournament.league, tournament) %> <% if is_editable?(tournament) -%>| <%= link_to "Edit", edit_league_tournament_path(tournament.league, tournament) %> | <%= link_to 'Delete', league_tournament_path(tournament.league, tournament), :data => { :confirm => 'Are you sure you want to delete this tournament?' }, :method => :delete %><% end -%></td>
    		</tr>
    	<% end %>
    	</tbody>
      <tfoot>
    		<tr>
    			<th>&nbsp;</th>
          <th>&nbsp;</th>
    			<th>&nbsp;</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
          <th><%= link_to 'Create Tournament', new_league_tournament_path(current_user.selected_league), :class => 'btn btn-primary' %></th>
    		</tr>
      </tfoot>
    </table>
  </div>
</div>

<%= paginate tournaments %>