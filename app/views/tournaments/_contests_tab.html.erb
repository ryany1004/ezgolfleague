<div class="tab-pane tab-pane-2 fade" id="contests-tab">
  <table class="table">
    <thead>
      <tr class="text-uppercase">
        <th scope="col" class="pl-5 pr-0">player</th>
        <th scope="col">payout</th>
        <th scope="col">point</th>
        <th scope="col">details</th>
        <th scope="col"></th>
      </tr>
    </thead>                        
    <tbody>
      <div class="tee-times-panel-content">
        <% tournament_day.tournament_groups.each_with_index do |group, i| %>
          <tr>
            <td colspan="4" class="pl-5 pr-0 border-0">
              <div class="heading-style">
                <h2 class="text-uppercase">closest to the hole  <%= i + 1 %>: <%= group.tee_time_at.to_s(:time_only) %></h2>
              </div>
            </td>                            
          </tr>

          <% slices = group.golf_outings.each_slice(2) %>
          <% slices.each do |slice| %>
            <% slice.each do |outing| %>
              <tr>
                <td class="pl-5 pr-0 border-top-0">
                  <div class="media">
                    <%= image_tag outing.user.avatar.url(:thumb), class: 'img-circle' %>
                    <div class="media-body">
                      <h2><%= outing.user.complete_name %></h2>
                    </div>
                  </div>
                </td>
                <td class="border-top-0">
                  $10
                </td>
                <td class="border-top-0">2</td>
                <td class="border-top-0">Closet to Hole 6</td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </tbody>
  </table>
</div>