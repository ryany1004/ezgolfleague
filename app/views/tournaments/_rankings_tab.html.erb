<div class="tab-pane active" id="rankings-tab">
  <table class="table">
    <thead>
      <tr class="text-uppercase">
        <th scope="col" class="pl-5 pr-0">Flight</th>
        <th scope="col">pos</th>
        <th scope="col">player</th>
        <th scope="col">net</th>
        <th scope="col">gross</th>
        <th scope="col">points</th>
        <th scope="col">payout</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% tournament_day.scorecard_base_scoring_rule.tournament_day_results.each do |result| %>
        <tr>
          <th class="pl-5 pr-0"><%= result.flight.display_name %></th>
          <td><%= result.rank %></td>
          <td>
            <div class="media">
              <%= image_tag result.user.avatar.url(:thumb), class: 'img-circle' %>
              <div class="media-body">
                <h2><%= result.user.complete_name %></h2>
              </div>
            </div>
          </td>
          <td><%= result.net_score %></td>
          <td><%= result.gross_score %></td>
          <td><%= result.points.to_i %></td>
          <td><%= number_to_currency(result.payouts) %></td>
          <td class="edit-link">
            <% scorecard = result.primary_scorecard %>
            <% loading_partial = render partial: 'shared/modal_loading' %>
            <%= link_to image_tag('edit.png'), league_tournament_tournament_day_scorecard_path(tournament_day.tournament.league, tournament_day.tournament, tournament_day, scorecard), data: { toggle:"modal", target: "#editScorecardModal" }, remote: true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="modal fade" id="editScorecardModal" tabindex="-1" role="dialog" aria-labelledby="ditScorecardModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body" id="view-scorecard-contents"><!-- Contents Inserted --></div>
    </div>
  </div>
</div>

<script>
$( ".edit-button" ).click(function() {
  $( ".edit" ).toggle( "slow", function() {
    // Animation complete.
  });
});
</script>
