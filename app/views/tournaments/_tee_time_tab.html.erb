    // $('#add-players').scrollTop($(".tee-time-popup." + this.id).offset().top);

    // var container = $(".edit-tee-times-right-content");
    // var  scrollTo = $(".tee-time-popup." + this.id);

    // container.animate({
    //   scrollTop:
    //     scrollTo.offset().top - container.offset().top + container.scrollTop()
    // });

      $('#add-players').animate(
        { scrollTop: $(".tee-time-popup." + this.id).offset().top -80 }, 
        500);  
  });
</script>