<%= simple_form_for [current_user.selected_league, @tournament] do |f| %>
  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>
  
  <legend>Tournament Details</legend>

  <h3>Basic Details</h3>
  <div class="well">  
    <%= f.input :league_id, collection: @leagues, :label => 'League', :label_method => :name %>
    
    <%= f.input :course_id, collection: @courses, :label => 'Course', :label_method => :name %>
    
	  <%= f.input :name, :label => 'Name', required: true %>
    
    <%= f.input :tournament_at, :label => 'Tournament Date', required: true, :as => :datetime_picker %>
  </div>

  <h3>Sign Up Info</h3>
  <div class="well">
    <%= f.input :signup_opens_at, :label => 'Signup Opening Date', :as => :datetime_picker %>
  
    <%= f.input :signup_closes_at, :label => 'Signup Closing Date', :as => :datetime_picker %>
  
    <%= f.input :max_players, :label => 'Maximum Number of Players' %>
  </div>
  
  <% if !@tournament.new_record? -%>
  <h3>Holes and Game Info</h3>
  <div class="well">
    <%= f.association :course_holes, collection: @tournament.course.course_holes, :label => 'Which holes are included?', :label_method => :name, as: :check_boxes %>
    
    <%= f.input :mens_tee_box, collection: @tournament.course.tee_box_types, :label => "Men's Tee Box" %>
    
    <%= f.input :womens_tee_box, collection: @tournament.course.tee_box_types, :label => "Women's Tee Box" %>
  </div>
  <% end -%>
  
  <h3>Game Type</h3>
  <div class="well">
    Game type info here.
  </div>
  
  <h3>Contests</h3>
  <div class="well">
    Contest info here.
  </div>
  
  <h3>Payout Details</h3>
  <div class="well">
    Payout info here.
  </div>
  
  <% if !@tournament.new_record? -%>
  <h3>Groups / Tee Times</h3>
  <div class="well">  
    <%= link_to 'Setup Tee Times', league_tournament_tournament_groups_path(@tournament.league, @tournament), :class => 'btn btn-primary' %>
  </div>
  <% end -%>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-default' %>
  </div>
<% end %>