<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Tournament Notifications</h3>
    </div>
    <table class="table table-striped">
    	<thead>
    		<tr>
    			<th>Title</th>
          <th>Delivery Date</th>
          <th>Recipients</th>
          <th>Delivered To</th>
          <th><%= link_to 'Create Notification', new_league_tournament_tournament_notification_path(@tournament.league, @tournament), :class => 'btn btn-primary' %></th>
    		</tr>
    	</thead>
    	<tbody>
    	<% @notification_templates.each do |notification_template| %>
    		<tr>
    			<td><%= link_to notification_template.title, edit_league_tournament_tournament_notification_path(@tournament.league, @tournament, notification_template) %></td>
    			<td><%= notification_template.deliver_at.to_s(:date_and_time) %></td>
          <td><%= notification_template.recipient_text %></td>
          <td><%= notification_template.notifications.count %></td>
          <td><%= link_to "Edit", edit_league_tournament_tournament_notification_path(@tournament.league, @tournament, notification_template) %> | <%= link_to 'Delete', league_tournament_tournament_notification_path(@tournament.league, @tournament, notification_template), :data => { :confirm => 'Are you sure you want to delete this notification? Note that it will not remove any delivered notifications.' }, :method => :delete %></td>
    		</tr>
    	<% end %>
    	</tbody>
      <tfoot>
    		<tr>
    			<th>&nbsp;</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
          <th><%= link_to 'Create Notification', new_league_tournament_tournament_notification_path(@tournament.league, @tournament), :class => 'btn btn-primary' %></th>
    		</tr>
      </tfoot>
    </table>
  </div>
</div>

<%= paginate @notification_templates %>
