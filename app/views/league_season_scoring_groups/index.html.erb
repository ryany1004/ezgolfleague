<ol class="breadcrumb">
  <li><%= link_to "Leagues", leagues_path %></li>
  <li><%= link_to @league_season.name, league_league_seasons_path(@league, @league_season) %></li>
  <li class="active">Scoring Groups</li>
</ol>

<h4>Scoring Groups for <%= @league_season.name %></h4>

<table class="table table-striped">
	<thead>
		<tr>
      <th>Name</th>
      <th><%= link_to 'Create Scoring Group', new_league_league_season_league_season_scoring_group_path(@league, @league_season), class: 'btn btn-primary' %></th>
		</tr>
	</thead>
	<tbody>
	<% @scoring_groups.each do |group| %>
		<tr>
      <td><%= link_to group.name, edit_league_league_season_league_season_scoring_group_path(@league, @league_season, group) %></td>
      <td><%= link_to "Edit", edit_league_league_season_league_season_scoring_group_path(@league, @league_season, group) %> | <%= link_to 'Delete', league_league_season_league_season_scoring_group_path(@league, @league_season, group), data: { confirm: 'Are you sure you want to delete this scoring group?' }, method: :delete %></td>
		</tr>
	<% end %>
	</tbody>
  <tfoot>
		<tr>
			<th>&nbsp;</th>
      <th><%= link_to 'Create Scoring Group', new_league_league_season_league_season_scoring_group_path(@league, @league_season), class: 'btn btn-primary' %></th>
		</tr>
  </tfoot>
</table>