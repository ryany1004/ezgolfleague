<%= simple_form_for score, url: edit_url do |f| %>
<div class="modal fade" id="Group<%= score.id %>" role="dialog" aria-labelledby="gridSystemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="gridSystemModalLabel">Enter Strokes For Hole</h4>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <div class="row">
              <td><%= f.input :strokes, label: false %></td>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.button :button, "Save Score", :class => "btn btn-default" %>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>