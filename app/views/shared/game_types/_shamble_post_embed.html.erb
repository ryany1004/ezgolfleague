<%= simple_form_for :metadata, url: play_scorecard_update_game_type_metadata_path(scorecards.first), method: :patch do |f| %>
<div class="modal fade" id="ShambleGroup<%= scorecards.first.id %>" role="dialog" aria-labelledby="gridSystemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="gridSystemModalLabel">Select Golfer for Tee Shot</h4>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <%= f.input :scorecard_id, collection: scorecards, label_method: :name, value_method: :id %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.button :submit, "Update", :class => 'btn btn-default' %>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end -%>