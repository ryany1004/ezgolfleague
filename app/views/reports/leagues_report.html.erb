<h4>Leagues</h4>

<% if current_user.is_super_user? %>
  CSV Export: 
  <%= link_to "All Leagues", export_leagues_league_reports_path(format: :csv), method: :patch %>
<% end %>

<div class="col-md-12">
  <table class="table table-striped">
  	<thead>
  		<tr>
  			<th>Name</th>
        <th>Email Address</th>
        <th>Type</th>
        <th>Golfers</th>
        <th>Active</th>
        <th>Created</th>
  		</tr>
  	</thead>
  	<tbody>
      <% @leagues.each do |league| -%>
        <tr>
          <td><%= link_to league.name, edit_league_path(league) %></td>
          <td><%= league.contact_email %></td>
          <td><%= league.league_type %></td>
          <td><%= league.golfer_count %></td>
          <td><%= league.active_golfer_count %></td>
          <td><%= league.created_at.to_s(:date_and_time) %></td>
        </tr>
      <% end -%>
  	</tbody>
  </table>
</div>
