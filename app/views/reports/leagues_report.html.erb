<h4>Leagues</h4>

<div class="col-md-12">
  <table class="table table-striped">
  	<thead>
  		<tr>
  			<th>Name</th>
        <th>Email Address</th>
        <th>Type</th>
        <th>Created</th>
  		</tr>
  	</thead>
  	<tbody>
      <% @leagues.each do |league| -%>
        <tr>
          <td><%= link_to league.name, edit_league_path(league) %></td>
          <td><%= league.contact_email %></td>
          <td><%= league.league_type %></td>
          <td><%= league.created_at.to_s(:date_and_time) %></td>
        </tr>
      <% end -%>
  	</tbody>
  </table>
</div>
