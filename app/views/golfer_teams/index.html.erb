<ol class="breadcrumb">
  <li><%= link_to "Tournaments", league_tournaments_path(current_user.selected_league) %></li>
  <li><%= link_to @tournament.name, edit_league_tournament_path(current_user.selected_league, @tournament) %></li>
  <li class="active">Manage Teams</li>
</ol>

<%= render partial: '/shared/tournaments/manage', locals: {tournament: @tournament, stage: @stage_name} %>

<% if @tournament_day.game_type.number_of_players_per_team != GameTypes::VARIABLE -%>
<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Teams</h3>
    </div>
    <div class="panel-body">
      The number of players per team is fixed at <%= @tournament_day.game_type.number_of_players_per_team %> for this game type.
    </div>
  </div>
</div>
<% else -%>
<h4><%= @page_title %></h4>
<% end -%>

<table class="table table-striped">
	<thead>
		<tr>
      <th>Team No.</th>
			<th>Players</th>
      <th>Tee Time</th>
      <% if user_is_league_admin(current_user, @tournament.league) -%>
      <th><%= link_to 'Create a New Team', new_league_tournament_golfer_team_path(@tournament.league, @tournament, tournament_day: @tournament_day), :class => 'btn btn-primary' %></th>
      <% else -%>
      <th>&nbsp;</th>
      <% end -%>
		</tr>
	</thead>
	<tbody>
	<% @golfer_teams.each_with_index do |golfer_team, i| %>
		<tr>
			<td><%= link_to "#{i + 1}", edit_league_tournament_golfer_team_path(@tournament.league, @tournament, golfer_team) %></td>
			<td><%= team_member_names(golfer_team) %></td>
      <td><%= @tournament_day.tournament_group_for_player(golfer_team.users.first).tee_time_at.to_s(:time_only) unless golfer_team.users.blank? %></td>
      <td><%= link_to "Edit", edit_league_tournament_golfer_team_path(@tournament.league, @tournament, golfer_team) %> | <%= link_to 'Delete', league_tournament_golfer_team_path(@tournament.league, @tournament, golfer_team), :data => { :confirm => 'Are you sure you want to delete this team?' }, :method => :delete %></td>
		</tr>
	<% end %>
	</tbody>
  <tfoot>
		<tr>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
      <th>&nbsp;</th>
      <% if user_is_league_admin(current_user, @tournament.league) -%>
      <th><%= link_to 'Create a New Team', new_league_tournament_contest_path(@tournament.league, @tournament), :class => 'btn btn-primary' %></th>
      <% else -%>
      <th>&nbsp;</th>
      <% end -%>
		</tr>
  </tfoot>
</table>