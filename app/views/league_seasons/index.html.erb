<ol class="breadcrumb">
  <li><%= link_to "Leagues", leagues_path %></li>
  <li class="active">League Seasons</li>
</ol>

<h4>League Seasons</h4>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Start Date</th>
      <th>End Date</th>
      <th><%= link_to 'Create Season', new_league_league_season_path(@league), :class => 'btn btn-primary' %></th>
		</tr>
	</thead>
	<tbody>
	<% @league_seasons.each do |season| %>
		<tr>
			<td><%= link_to season.starts_at.to_s(:short), edit_league_league_season_path(@league, season) %></td>
			<td><%= link_to season.ends_at.to_s(:short), edit_league_league_season_path(@league, season) %></td>
      <td><%= link_to "Edit", edit_league_league_season_path(@league, season) %> | <%= link_to 'Delete', league_league_season_path(@league, season), :data => { :confirm => 'Are you sure you want to delete this season?' }, :method => :delete %></td>
		</tr>
	<% end %>
	</tbody>
  <tfoot>
		<tr>
			<th>&nbsp;</th>
      <th>&nbsp;</th>
      <th><%= link_to 'Create Season', new_league_league_season_path(@league), :class => 'btn btn-primary' %></th>
		</tr>
  </tfoot>
</table>